<skin>

    <!-- com.alee.laf.separator.WebSeparator -->

    <!-- Separator -->
    <style type="separator" padding="1,1,1,1">
        <painter>
            <lines>
                <line>
                    <color fraction="0.0">0,0,0,5</color>
                    <color fraction="0.5">black</color>
                    <color fraction="1.0">0,0,0,5</color>
                </line>
                <line>
                    <color fraction="0.0">255,255,255,5</color>
                    <color fraction="0.5">255,255,255,15</color>
                    <color fraction="1.0">255,255,255,5</color>
                </line>
            </lines>
        </painter>
    </style>

    <!-- Horizontal separator -->
    <style type="separator" id="horizontal">
        <component>
            <orientation>0</orientation>
        </component>
        <painter>
            <lines>
                <line>
                    <color>200,200,200</color>
                </line>
            </lines>
        </painter>
    </style>

    <!-- Vertical separator -->
    <style type="separator" id="vertical">
        <component>
            <orientation>1</orientation>
        </component>
        <painter>
            <lines>
                <line>
                    <color>200,200,200</color>
                </line>
            </lines>
        </painter>
    </style>

</skin>