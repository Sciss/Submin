<skin>

    <!-- Skin information -->
    <id>sciss.submin.light</id>
    <title>Submin light skin</title>
    <description>Submin light skin</description>
    <author>Hanns Holger Rutz</author>
    <supportedSystems>all</supportedSystems>

    <!-- Base skin class, included resources with no specified "nearClass" attribute will use this class -->
    <class>de.sciss.submin.SubminLightSkin</class>

    <!-- Including WebLaF default skin, will use its style as a base -->
    <include nearClass="com.alee.skin.light.WebLightSkin">resources/web-light-skin.xml</include>

    <include>light/button.xml</include>
    <include>light/checkbox.xml</include>
    <include>light/combobox.xml</include>
    <include>light/label.xml</include>
    <include>light/menu.xml</include>
    <include>light/progressbar.xml</include>
    <include>light/radiobutton.xml</include>
    <include>light/separator.xml</include>
    <include>light/slider.xml</include>
    <include>light/styledlabel.xml</include>
    <include>light/tabbedpane.xml</include>
    <include>light/table.xml</include>
    <include>light/togglebutton.xml</include>
</skin>