<skin>

    <!-- Skin information -->
    <id>sciss.submin.light</id>
    <title>Submin light skin</title>
    <description>Submin light skin</description>
    <author>Hanns Holger Rutz</author>
    <supportedSystems>all</supportedSystems>

    <!-- Base skin class, included resources with no specified "nearClass" attribute will use this class -->
    <class>de.sciss.submin.SubminLightSkin</class>

    <!-- Including WebLaF default skin, will use its style as a base -->
    <include nearClass="com.alee.skin.light.WebLightSkin">resources/web-light-skin.xml</include>

    <include>light/buttonNew.xml</include>
    <include>light/checkboxNew.xml</include>
    <include>light/comboboxNew.xml</include>
    <include>light/labelNew.xml</include>
    <include>light/menuNew.xml</include>
    <include>light/progressbarNew.xml</include>
    <include>light/radiobuttonNew.xml</include>
    <include>light/separatorNew.xml</include>
    <include>light/sliderNew.xml</include>
    <include>light/styledlabelNew.xml</include>
    <include>light/tabbedpaneNew.xml</include>
    <include>light/tableNew.xml</include>
    <include>light/togglebuttonNew.xml</include>
</skin>