<skin>

    <!-- com.alee.laf.text.WebFormattedTextField -->

    <!-- Formatted text field -->
    <style type="formattedtextfield" padding="2,4,2,4">
        <component>
            <opaque>false</opaque>
            <foreground>200,200,200</foreground>
            <selectedTextColor>black</selectedTextColor>
            <selectionColor>200,200,200</selectionColor>
            <caretColor>71,113,191</caretColor>
        </component>
        <painter>
            <inputPromptHorizontalPosition>10</inputPromptHorizontalPosition>
            <inputPromptVerticalPosition>1</inputPromptVerticalPosition>
            <inputPromptForeground>160,160,160</inputPromptForeground>
            <inputPromptOnlyWhenEditable>true</inputPromptOnlyWhenEditable>
            <hideInputPromptOnFocus>false</hideInputPromptOnFocus>
            <decorations>
                <decoration>
                    <WebShape round="2" />
                    <WebShadow type="outer" width="2" />
                    <LineBorder color="black" />
                    <ColorBackground color="black" />
                </decoration>
                <decoration states="focused">
                    <LineBorder color="48,77,130" />
                </decoration>
                <decoration states="disabled">
                    <WebShadow type="outer" opacity="0" />
                    <LineBorder color="16,18,20" />
                    <ColorBackground color="0,0,0,128" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Formatted text field undecorated -->
    <style type="formattedtextfield" id="undecorated">
        <painter>
            <decorations>
                <decoration visible="false" />
            </decorations>
        </painter>
    </style>

    <!-- Formatted text field without focus decoration -->
    <style type="formattedtextfield" id="nofocus">
        <painter>
            <decorations>
                <decoration states="focused">
                    <LineBorder color="black" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>