<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.text.WebPasswordField -->

    <!-- Password field -->
    <style type="passwordfield">
        <component>
            <foreground>200,200,200</foreground>
            <selectedTextColor>black</selectedTextColor>
            <selectionColor>200,200,200</selectionColor>
            <caretColor>71,113,191</caretColor>
        </component>
        <painter>
            <inputPromptForeground>160,160,160</inputPromptForeground>
            <decorations>
                <decoration>
                    <LineBorder color="black" />
                    <ColorBackground color="black" />
                </decoration>
                <decoration states="focused">
                    <LineBorder color="48,77,130" />
                </decoration>
                <decoration states="disabled">
                    <WebShadow type="outer" opacity="0" />
                    <LineBorder color="16,18,20" />
                    <ColorBackground color="0,0,0,128" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Non-opaque password field -->
    <style type="passwordfield" id="non-opaque">
        <painter>
            <decorations>
                <decoration>
                    <ColorBackground color="black" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Password field without focus decoration -->
    <style type="passwordfield" id="nofocus">
        <painter>
            <decorations>
                <decoration states="focused">
                    <LineBorder color="170,170,170" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>