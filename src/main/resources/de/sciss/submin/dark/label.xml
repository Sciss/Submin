<skin>

    <!-- com.alee.laf.label.WebLabel -->

    <!-- Label -->
    <style type="label">
        <component>
            <!--<opaque>false</opaque>-->
            <foreground>216,220,224</foreground>
            <!--<background>32,36,40</background>-->
        </component>
        <painter class="SubminLabelPainter">
            <drawShade>true</drawShade>
            <!--<shadeColor>18,18,18</shadeColor>-->
            <shadeColor>24,26,28</shadeColor>
            <disabledForeground>216,220,224,128</disabledForeground>
            <shadeSize>2</shadeSize>
            <shadeShadow>true</shadeShadow>
            <shadeShiftY>0</shadeShiftY>
            <rotation>none</rotation>
        </painter>
    </style>

    <!-- Label with text shade -->
    <style type="label" id="shade">
        <painter class="SubminLabelPainter">
            <drawShade>true</drawShade>
        </painter>
    </style>

    <!-- Label without text shade -->
    <style type="label" id="noshade">
        <painter class="SubminLabelPainter">
            <drawShade>false</drawShade>
        </painter>
    </style>

    <!-- Vertical text -->
    <style type="label" id="vertical">
        <painter class="SubminLabelPainter">
            <rotation>counterClockwise</rotation>
        </painter>
    </style>

    <!-- Label with tag decoration -->
    <style type="label" id="tag" padding="2,5,2,5">
        <painter class="SubminLabelPainter">
            <decorations>
                <decoration>
                    <WebShape round="3" />
                    <LineBorder color="185,185,185" />
                    <ColorBackground color="237,237,237" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>