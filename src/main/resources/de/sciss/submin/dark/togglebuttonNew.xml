<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.button.WebToggleButton -->

    <!-- Toggle button -->
    <style type="togglebutton" padding="2,6,2,6">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="3" />
                    <WebShadow type="outer" width="3" />
                    <LineBorder color="16,16,16" />
                    <GradientBackground>
                        <color>64,64,64</color>
                        <color>48,48,48</color>
                    </GradientBackground>
                    <ButtonLayout>
                        <SubminButtonText constraints="text" color="220,220,220" />
                    </ButtonLayout>
                </decoration>
                <decoration states="selected">
                    <WebShadow type="outer" opacity="0.5" color="210,210,210" />
                    <WebShadow type="inner" width="6" />
                    <LineBorder color="120,120,120" />
                    <GradientBackground>
                        <color>36,36,36</color>
                        <color>48,48,48</color>
                    </GradientBackground>
                    <ButtonLayout>
                        <SubminButtonText color="160,160,160" />
                    </ButtonLayout>
                </decoration>
                <decoration states="focused">
                    <SubminFocusBorder color="16,16,16" />
                </decoration>
                <decoration states="pressed">
                    <WebShadow type="outer" opacity="0" />
                    <WebShadow type="inner" width="6" />
                    <ColorBackground color="48,48,48" />
                    <ButtonLayout>
                        <SubminButtonText color="160,160,160" textShiftY="1" />
                    </ButtonLayout>
                </decoration>
                <decoration states="disabled">
                    <WebShadow type="outer" opacity="0.5" />
                    <LineBorder color="16,16,16,128" />
                    <GradientBackground>
                        <color>64,64,64,128</color>
                        <color>48,48,48,128</color>
                    </GradientBackground>
                    <ButtonLayout>
                        <SubminButtonText color="220,220,220,72" shadowColor="36,36,36" />
                    </ButtonLayout>
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Used by Mellite for tool icons; like 'icon' but more spacing -->
    <style type="togglebutton" id="icon-space" padding="2,3,2,3" />
</skin>