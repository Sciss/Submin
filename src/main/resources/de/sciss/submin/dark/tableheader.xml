<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.table.WebTableHeader -->

    <!-- Table header -->
    <style type="tableheader">
        <component>
            <foreground>216,220,224</foreground>
        </component>
        <painter>
            <topBgColor>126,126,126</topBgColor>
            <bottomBgColor>101,101,101</bottomBgColor>
            <gridColor>48,48,48</gridColor>
        </painter>

        <style type="label" id="renderer" extends="shadow">
            <painter>
                <decorations>
                    <decoration>
                        <LabelLayout>
                            <!-- Ideally we would use bold-face text. With shadow, regular text looks too thin -->
                            <!-- shadowSize="2" shadowColor="216,220,224" shadowOpacity="2.0"-->
                            <SubminLabelText constraints="text" color="black" shadow="true" shadowColor="128,128,128" shadowOpacity="1.5" />
                        </LabelLayout>
                    </decoration>
                </decorations>
            </painter>
        </style>

    </style>

</skin>