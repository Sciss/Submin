<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.panel.WebPanel -->

    <!-- Panel -->
    <style type="panel">
        <component>
            <!-- dangerous, do _not set: -->
            <!-- <foreground>216,220,224</foreground> -->
            <background>32,36,40</background>
        </component>
    </style>

    <!-- Non-opaque panel -->
    <style type="panel" id="non-opaque">
        <painter>
            <decorations>
                <decoration>
                    <ColorBackground color="32,36,40" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Decorated panel -->
    <style type="panel" id="decorated" extends="non-opaque">
        <painter>
            <decorations>
                <decoration>
                    <LineBorder color="85,85,85" />
                    <ColorBackground color="black" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Decorated panel -->
    <style type="panel" id="focusable" extends="decorated">
        <painter>
            <decorations>
                <decoration states="focused">
                    <LineBorder color="48,77,130" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>