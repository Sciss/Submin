<skin xmlns="http://weblookandfeel.com/XmlSkin">
    <!-- com.alee.laf.menu.WebRadioButtonMenuItem -->

    <!-- Radio button menu item -->
    <style type="radiobuttonmenuitem">
        <component>
            <foreground>200,200,200</foreground>
        </component>
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="0" />
                    <MenuItemLayout>
                        <ButtonText constraints="text" color="200,200,200" />
                        <RoundRectangle constraints="accelerator">
                            <ColorBackground color="0,0,0,200" />
                        </RoundRectangle>
                        <AcceleratorText constraints="accelerator" color="90,90,90" />
                    </MenuItemLayout>
                </decoration>
                <decoration states="selected">
                    <GradientBackground>
                        <color>88,88,88</color>
                        <color>76,76,76,200</color>
                    </GradientBackground>
                </decoration>
                <decoration states="disabled">
                    <MenuItemLayout>
                        <ButtonText color="200,200,200,96" />
                        <AcceleratorText color="90,90,90,96" />
                    </MenuItemLayout>
                </decoration>
            </decorations>

            <!-- State icon painter -->
            <stateIconPainter>
                <decorations>
                    <decoration size="20,20">
                        <!--looks bad: EllipseShape-->
                        <WebShape round="7" />
                        <WebShadow type="outer" width="3" />
                        <LineBorder color="16,16,16" />
                        <GradientBackground>
                            <color>64,64,64</color>
                            <color>48,48,48</color>
                        </GradientBackground>
                    </decoration>
                    <decoration states="checked">
                        <LineBorder color="48,48,48" />
                        <RadioIcon leftColor="180,180,180" rightColor="128,128,128" />
                    </decoration>
                    <decoration states="disabled">
                        <WebShadow type="outer" opacity="0" />
                        <LineBorder color="16,16,16,128" />
                        <GradientBackground>
                            <color>64,64,64,128</color>
                            <color>48,48,48,128</color>
                        </GradientBackground>
                    </decoration>
                    <decoration states="disabled,checked">
                        <RadioIcon leftColor="140,140,140,128" rightColor="128,128,128,128" />
                    </decoration>
                </decorations>
            </stateIconPainter>

        </painter>
    </style>

</skin>