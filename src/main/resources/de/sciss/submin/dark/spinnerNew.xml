<skin xmlns="http://weblookandfeel.com/XmlSkin">

    <!-- com.alee.laf.splitpane.WebSplitPane -->

    <!-- Split pane -->
    <style type="splitpane">
        <component>
            <background>37,41,46</background>
        </component>

        <!-- Non-continuous divider -->
        <style type="canvas" id="non-continuous">
            <painter>
                <decorations>
                    <decoration>
                        <ColorBackground color="37,41,46,200" />
                        <LineBorder color="20,23,26" />
                    </decoration>
                </decorations>
            </painter>
        </style>

    </style>

    <!-- Non-opaque split pane -->
    <style type="splitpane" id="non-opaque">
        <painter>
            <decorations>
                <decoration>
                    <ColorBackground color="37,41,46" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Undecorated split pane -->
    <style type="splitpane" id="undecorated" extends="transparent">

        <!-- Non-continuous divider -->
        <style type="canvas" id="non-continuous">
            <painter>
                <decorations>
                    <decoration>
                        <ColorBackground color="37,41,46,200" />
                    </decoration>
                </decorations>
            </painter>
        </style>

    </style>

    <!-- Decorated split pane -->
    <style type="splitpane" id="decorated" extends="non-opaque">
        <painter>
            <decorations>
                <decoration>
                    <LineBorder color="20,23,26" />
                    <ColorBackground color="37,41,46" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Decorated split pane -->
    <style type="splitpane" id="focusable" extends="decorated">
        <painter>
            <decorations>
                <decoration states="focused">
                    <LineBorder color="48,77,130" />
                </decoration>
            </decorations>
        </painter>
    </style>

</skin>